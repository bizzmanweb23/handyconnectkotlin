<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_20sdp">

        <TextView
            android:id="@+id/butBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_back"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />


        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logotwo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@+id/butBack">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/vector" />

        <TextView
            style="@style/tvBoldItalic"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/how_can_we_help"/>

        <ImageView
            android:id="@+id/imgMan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/manimage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/imgMan"
            android:background="@color/blackgray" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                style="@style/tvSemiBold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/heading_color"
                android:text="@string/our_services"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/paintingSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/paintbrush"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:layout_height="@dimen/_30sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/painting"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/doorRepairSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/doorrepair"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/door_repair"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/electricalSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/electrical"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/electrical"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/airConditionSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/airconditioner"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/air_condition"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/carpentrySec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/carpentry"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/carpentry"
                        android:textAllCaps="true"
                        android:textColor="@color/heading_color"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/furnitureSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/furniture"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/furniture_assembly"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cleaningSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/cleaning"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/cleaning"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/installationSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/installationservice"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/installation_service"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lockSmith"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/locksmith"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/lock"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/drillSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/drilling"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/drilling"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plumbingSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/plumbing"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/plumbing"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/otherSec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/others"/>

                    <TextView
                        style="@style/tvSemiBold"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/heading_color"
                        android:text="@string/others"/>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>