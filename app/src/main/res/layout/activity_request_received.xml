<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:src="@drawable/logotwo" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:background="@color/brown"
        android:orientation="vertical">

        <TextView
            style="@style/tvBold"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="@string/your_request_has_been_received"/>

        <TextView
            style="@style/tvRegular"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/thanku_for_request"/>

        <TextView
            style="@style/tvRegular"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/we_will_be_in_touch_with_you_as_soon_as_we_can"/>

        <ImageView
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_25sdp"
            android:src="@drawable/checkedbox"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:background="@color/white"/>


    </LinearLayout>

</LinearLayout>