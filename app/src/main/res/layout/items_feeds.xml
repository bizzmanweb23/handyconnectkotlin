<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangular_back">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/homewithcircle" />

            <TextView
                android:id="@+id/serviceName"
                style="@style/tvSemiBold"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_toEndOf="@+id/homeIcon"
                android:maxLines="2"
                android:text="Handy Connect"
                android:textColor="@color/bottom_text_color_two"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/tvSemiBold"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toEndOf="@+id/homeIcon"
                android:text="4h"
                android:layout_below="@+id/serviceName"
                android:textColor="@color/bottom_text_color_two"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_alignTop="@+id/serviceName"
                android:layout_toEndOf="@+id/serviceName"
                android:src="@drawable/okimg"/>

            <TextView
                android:id="@+id/tvViewAppointment"
                style="@style/tvSemiBold"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="end"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_18sdp"
                android:backgroundTint="@color/light_gray_three"
                android:background="@drawable/round_back"
                android:text="@string/follow"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvDes"
                style="@style/tvRegular"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_below="@+id/tvTime"
                android:maxLines="4"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="@string/dummy_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tvImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_below="@+id/tvDes">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/feed_img"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvImage"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_28sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgThumb"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/grey_thumbs"/>

                <TextView
                    style="@style/tvRegular"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="200k"/>


                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:src="@drawable/forward_arrow"/>

                <TextView
                    style="@style/tvRegular"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="100"/>

            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>